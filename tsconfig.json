   {
     "compilerOptions": {
       "target": "es2016",
       "module": "commonjs",
       "rootDir": "./src",
       "outDir": "./dist",
       "moduleResolution": "node",
       "esModuleInterop": true,
       "forceConsistentCasingInFileNames": true,
       "strict": true,
       "skipLibCheck": true,
       "listFiles": true,  // For debugging
       "listEmittedFiles": true,  // For debugging
       "typeRoots": ["./src/app/interfaces", "./node_modules/@types"], 
     },
     "include": [
         "src/**/*.ts",
         "src/**/*.d.ts",  // Ensures index.d.ts is included
         "./src/app/interfaces/index.d.ts"  // Explicitly include the augmentation file
       ],
     "exclude": ["node_modules", "dist"]
   }
   